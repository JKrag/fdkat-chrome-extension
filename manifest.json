{
    "manifest_version": 3,
    "name": "FDKat improvements",
    "version": "1.0",
    "description": "Sorts FDKat search table",
    "permissions": ["activeTab", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://fdkat.dk/*"
            ],
            "js": [
                "sorter.js"
            ],
            "run_at": "document_idle"
        }
    ]
}