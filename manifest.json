{
    "manifest_version": 3,
    "name": "FDKat improvements",
    "version": "1.0",
    "description": "Sorts FDKat search table",
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
        {
            "matches": [
                "https://fdkat.dk/*",
                "https://kissat.kissaliitto.fi/*",
                "https://katt.nrr.no/*"
            ],
            "js": [
                "sorter.js"
            ],
            "run_at": "document_idle"
        }
    ]
}